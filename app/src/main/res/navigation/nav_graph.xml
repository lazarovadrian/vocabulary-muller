<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/main_switch_layout">

    <fragment
        android:id="@+id/main_switch_layout"
        android:name="com.lazarovstudio.vocabularymuller.fragments.alphabetFragment.AlphabetFragment"
        android:label="Список Слов"
        tools:layout="@layout/rc_fragment_alphabet">
        <action
            android:id="@+id/action_alphabetFragment_to_favoriteFragment"
            app:destination="@id/favorite_switch_layout" />
        <action
            android:id="@+id/action_alphabetFragment_to_detailWordFragment"
            app:destination="@id/detailWordFragment" />
        <argument
            android:name="letter"
            app:argType="string" />
        <action
            android:id="@+id/action_alphabetFragment_to_listAlphabetChar"
            app:destination="@id/alphabet_switch_layout" />
    </fragment>
    <fragment
        android:id="@+id/detailWordFragment"
        android:name="com.lazarovstudio.vocabularymuller.fragments.DetailWordFragment"
        android:label="DetailWordFragment"
        tools:layout="@layout/fragment_detail_word">
        <action
            android:id="@+id/action_detailWordFragment_to_favoriteFragment"
            app:destination="@id/favorite_switch_layout" />
    </fragment>
    <fragment
        android:id="@+id/alphabet_switch_layout"
        android:name="com.lazarovstudio.vocabularymuller.fragments.ListAlphabetChar"
        android:label="list_alphabet_char"
        tools:layout="@layout/rc_fragment_alphabet_char">
        <action
            android:id="@+id/action_listAlphabetChar_to_main_switch_layout"
            app:destination="@id/main_switch_layout" />
    </fragment>
    <fragment
        android:id="@+id/favorite_switch_layout"
        android:name="com.lazarovstudio.vocabularymuller.fragments.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite" />
</navigation>